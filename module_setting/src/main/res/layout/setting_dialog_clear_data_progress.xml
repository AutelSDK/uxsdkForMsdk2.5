<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AutelEnterprise.NoActionBar">

    <RelativeLayout
        android:layout_width="@dimen/common_320dp"
        android:layout_height="@dimen/common_185dp"
        android:layout_centerInParent="true"
        android:background="@drawable/common_shape_rect_solid_color_ff_radius_14">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="@dimen/common_280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_32dp"
            android:gravity="center"
            android:text="@string/common_text_clearing_data"
            android:textColor="@color/common_color_FF333333"
            android:textSize="@dimen/common_text_size_sp_15" />


        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            style="@style/Widget.MaterialComponents.LinearProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_4dp"
            android:layout_below="@id/title_tv"
            android:layout_marginHorizontal="@dimen/common_20dp"
            android:layout_marginTop="@dimen/common_28dp"
            android:indeterminate="false"
            android:progress="50"
            app:indicatorColor="@color/common_color_brand_007aff"
            app:trackCornerRadius="@dimen/common_10dp" />


        <View
            android:layout_width="@dimen/common_800dp"
            android:layout_height="@dimen/common_1dp"
            android:layout_above="@id/cancel_tv"
            android:background="@color/common_color_FFDEDEDE" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/common_10dp"
            android:paddingBottom="@dimen/common_13dp"
            android:gravity="center"
            android:text="@string/common_text_cancel"
            android:textColor="@color/common_color_007aff"
            android:textSize="@dimen/common_text_size_sp_17" />

    </RelativeLayout>
</RelativeLayout>