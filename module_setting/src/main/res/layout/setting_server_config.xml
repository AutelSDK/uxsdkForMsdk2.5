<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/common_450dp"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/common_450dp"
            android:layout_height="wrap_content"
            android:background="@drawable/common_item_bg_all"
            android:orientation="vertical"
            android:paddingStart="@dimen/common_15dp"
            android:paddingTop="@dimen/common_15dp"
            android:paddingEnd="@dimen/common_0dp"
            android:paddingBottom="@dimen/common_20dp">

            <TextView
                android:id="@+id/tv_drone_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_text_enhance_config_drone"
                android:textColor="@color/common_color_FFFFFFFF"
                android:textSize="@dimen/common_text_size_sp_19"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_reset_drone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_15dp"
                android:text="@string/common_text_reset"
                android:textColor="@color/common_color_FEE15D"
                android:textSize="@dimen/common_text_size_sp_19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_drone_server"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40dp"
                android:layout_marginTop="@dimen/common_15dp"
                android:layout_marginEnd="@dimen/common_15dp"
                android:background="@drawable/common_edit_bg_all_gray"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:paddingStart="@dimen/common_8dp"
                android:paddingEnd="@dimen/common_8dp"
                android:textColor="@color/common_color_FFFFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_drone_config" />

            <View
                android:id="@+id/line"
                style="@style/common_horizontal_line"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/common_20dp"
                app:layout_constraintTop_toBottomOf="@id/et_drone_server" />

            <TextView
                android:id="@+id/tv_rc_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_15dp"
                android:text="@string/common_text_enhance_config_rc"
                android:textColor="@color/common_color_FFFFFFFF"
                android:textSize="@dimen/common_text_size_sp_19"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <TextView
                android:id="@+id/tv_reset_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_15dp"
                android:text="@string/common_text_reset"
                android:textColor="@color/common_color_FEE15D"
                android:textSize="@dimen/common_text_size_sp_19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_rc_config"
                app:layout_constraintTop_toTopOf="@id/tv_rc_config" />

            <EditText
                android:id="@+id/et_rc_server"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40dp"
                android:layout_marginTop="@dimen/common_15dp"
                android:layout_marginEnd="@dimen/common_15dp"
                android:background="@drawable/common_edit_bg_all_gray"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:paddingStart="@dimen/common_8dp"
                android:paddingEnd="@dimen/common_8dp"
                android:textColor="@color/common_color_FFFFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_rc_config" />


            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_50dp"
                android:layout_marginStart="@dimen/common_50dp"
                android:layout_marginTop="@dimen/common_15dp"
                android:layout_marginEnd="@dimen/common_65dp"
                android:background="@drawable/common_shape_rect_white_r9"
                android:gravity="center"
                android:minWidth="@dimen/common_212_5dp"
                android:padding="@dimen/common_10dp"
                android:text="@string/common_text_save"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_sp_19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_rc_server" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
