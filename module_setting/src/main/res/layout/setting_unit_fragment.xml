<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="@dimen/common_450dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.autel.common.widget.CommonSettingItemSpinnerView
            android:id="@+id/csisv_speed_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_15dp"
            android:background="@drawable/common_item_bg_only_top"
            app:title_name="@string/common_text_unit_speed_distance" />

        <com.autel.common.widget.CommonSettingItemSpinnerView
            android:id="@+id/csisv_area_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_item_bg_none"
            app:title_name="@string/common_text_unit_area" />

        <com.autel.common.widget.CommonSettingItemSpinnerView
            android:id="@+id/csisv_temprature_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_item_bg_none"
            app:title_name="@string/common_text_unit_temperature" />

        <com.autel.common.widget.CommonSettingItemSpinnerView
            android:id="@+id/csisv_coordinates_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_item_bg_only_bottom"
            app:title_name="@string/common_text_unit_coordinate" />

        <!--=============坐标单位 end======================-->

    </LinearLayout>


</androidx.core.widget.NestedScrollView>