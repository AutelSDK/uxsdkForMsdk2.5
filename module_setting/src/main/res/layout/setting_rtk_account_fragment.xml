<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/common_450dp"
            android:layout_height="wrap_content"
            app:bl_corners_radius="@dimen/common_9dp"
            app:bl_solid_color="@color/common_color_1c1c1e"
            android:padding="@dimen/common_10dp"
            app:bl_stroke_color="@color/common_color_ff"
            >
            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_55dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/common_text_enter_your_mobile_email"
                android:imeOptions="flagNoExtractUi"
                android:paddingStart="@dimen/common_20dp"
                android:paddingEnd="@dimen/common_20dp"
                android:singleLine="true"
                app:bl_stroke_color="@color/common_color_ff"
                app:bl_stroke_width="@dimen/common_1dp"
                app:bl_corners_radius="@dimen/common_9dp"
                android:textColor="@color/common_color_33"
                android:textColorHint="@color/common_color_b4b4b4"
                android:textSize="@dimen/common_text_size_sp_17" />
            <EditText
                android:id="@+id/et_user_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_55dp"
                app:layout_constraintTop_toBottomOf="@id/et_user_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="@string/common_text_enter_your_mobile_email"
                android:imeOptions="flagNoExtractUi"
                android:paddingStart="@dimen/common_20dp"
                android:paddingEnd="@dimen/common_20dp"
                app:bl_stroke_color="@color/common_color_ff"
                app:bl_stroke_width="@dimen/common_1dp"
                app:bl_corners_radius="@dimen/common_9dp"
                android:singleLine="true"
                android:textColor="@color/common_color_33"
                android:textColorHint="@color/common_color_b4b4b4"
                android:textSize="@dimen/common_text_size_sp_17" />
            <EditText
                android:id="@+id/et_user_mount_point"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_55dp"
                app:layout_constraintTop_toBottomOf="@id/et_user_pwd"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/common_text_enter_your_mobile_email"
                android:imeOptions="flagNoExtractUi"
                android:paddingStart="@dimen/common_20dp"
                android:paddingEnd="@dimen/common_20dp"
                app:bl_stroke_color="@color/common_color_ff"
                app:bl_stroke_width="@dimen/common_1dp"
                app:bl_corners_radius="@dimen/common_9dp"
                android:singleLine="true"
                android:textColor="@color/common_color_33"
                android:textColorHint="@color/common_color_b4b4b4"
                android:textSize="@dimen/common_text_size_sp_17" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>