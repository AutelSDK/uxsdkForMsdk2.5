<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_shape_rect_solid_color_ff_radius_14">

        <TextView
            android:id="@+id/tv_title"
            style="@style/common_font_black_00_15"
            android:layout_width="@dimen/common_0dp"
            android:layout_marginStart="@dimen/common_15dp"
            android:layout_marginTop="@dimen/common_15dp"
            android:layout_marginEnd="@dimen/common_15dp"
            android:gravity="start"
            android:text="@string/common_text_adsb_explanation_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_12dp"
            android:layout_marginTop="@dimen/common_12dp"
            android:src="@drawable/common_icon_adsb_explanation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:paddingBottom="@dimen/common_10dp"
            />
        <TextView
            android:id="@+id/tv_weak_description"
            android:gravity="start"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_text_adsb_weak_description"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_icon"
            android:layout_marginStart="@dimen/common_10dp"
            android:layout_marginBottom="@dimen/common_15dp"/>
        <TextView
            android:id="@+id/tv_middle_description"
            android:gravity="start"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_text_adsb_middle_description"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintBottom_toTopOf="@id/tv_weak_description"
            android:layout_marginBottom="@dimen/common_10dp"
            android:layout_marginStart="@dimen/common_10dp"
            android:paddingEnd="@dimen/common_10dp"/>
        <TextView
            android:id="@+id/tv_strong_description"
            android:gravity="start"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_text_adsb_strong_description"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintBottom_toTopOf="@id/tv_middle_description"
            android:layout_marginStart="@dimen/common_10dp"
            android:layout_marginBottom="@dimen/common_10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.autel.ui.TriangleView
        android:id="@+id/triangle"
        android:layout_width="@dimen/common_14dp"
        android:layout_height="@dimen/common_5dp"
        app:layout_constraintTop_toBottomOf="@id/cl_content_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>