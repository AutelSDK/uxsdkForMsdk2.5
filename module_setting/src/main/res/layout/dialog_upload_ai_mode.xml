<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/common_360dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    app:cardBackgroundColor="@color/common_color_ff"
    app:cardCornerRadius="@dimen/common_14dp"
    app:cardElevation="0px"
    tools:ignore="MissingDefaultResource,ResourceName">

    <LinearLayout
        android:layout_width="@dimen/common_360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_24dp"
            android:layout_marginTop="@dimen/common_46dp"
            android:layout_marginEnd="@dimen/common_24dp"
            android:layout_marginBottom="@dimen/common_24dp"
            android:gravity="center"
            android:text="@string/common_text_enter_high_speed"
            android:textColor="@color/common_color_black"
            android:textSize="@dimen/common_text_size_sp_17"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_24dp"
            android:layout_marginEnd="@dimen/common_24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/common_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/common_0dp"
                android:paddingEnd="@dimen/common_12dp"
                android:textColor="@color/common_color_80"
                android:textSize="@dimen/common_text_size_sp_15"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="项目-V1" />

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_12dp"
                android:textColor="@color/common_color_black"
                android:textSize="@dimen/common_text_size_sp_15"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="5.6MB/S" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_12dp"
                android:textColor="@color/common_color_black"
                android:textSize="@dimen/common_text_size_sp_15"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="80%" />
        </LinearLayout>


        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            style="@style/Widget.MaterialComponents.LinearProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_4dp"
            android:layout_marginStart="@dimen/common_24dp"
            android:layout_marginTop="@dimen/common_17dp"
            android:layout_marginEnd="@dimen/common_24dp"
            android:layout_marginBottom="@dimen/common_48dp"
            android:indeterminate="false"
            android:progress="0"
            app:indicatorColor="@color/common_color_brand_007aff"
            app:trackCornerRadius="@dimen/common_10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:background="@color/common_color_cd" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_50dp"
            android:gravity="center"
            android:text="@string/common_text_cancel"
            android:textColor="@color/common_color_007aff"
            android:textSize="@dimen/common_text_size_sp_17"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</androidx.cardview.widget.CardView>