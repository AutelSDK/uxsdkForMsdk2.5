<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pair_plane_fail"
        android:layout_width="@dimen/common_410dp"
        android:layout_height="@dimen/common_410dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/common_15dp"
        android:layout_marginBottom="@dimen/common_15dp"
        android:background="@drawable/common_shape_rect_solid_color_ff_radius_10"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/label_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_30dp"
            android:layout_marginTop="@dimen/common_30dp"
            android:layout_marginEnd="@dimen/common_30dp"
            android:text="@string/common_text_connect_new_aircraft_pairing_tips"
            android:textColor="@color/common_color_FF333333"
            android:textSize="@dimen/common_text_size_sp_18"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fail_logo"
            android:layout_width="@dimen/common_320dp"
            android:layout_height="@dimen/common_160dp"
            android:background="@drawable/mission_ic_pair_click_plane"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/common_70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_fail" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fail_close"
            android:layout_width="@dimen/common_48dp"
            android:layout_height="@dimen/common_48dp"
            android:scaleType="center"
            android:src="@drawable/mission_ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>