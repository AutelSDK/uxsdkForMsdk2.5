<?xml version="1.0" encoding="utf-8"?><!--<FrameLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/common_55dp"
    android:background="@drawable/common_shape_solid_color_black_70_radius_8"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/ll_operation_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_10dp"
        android:paddingTop="@dimen/common_5_5dp"
        android:paddingEnd="@dimen/common_10dp"
        android:paddingBottom="@dimen/common_4_5dp">

        <ImageView
            android:layout_width="@dimen/common_24dp"
            android:layout_height="@dimen/common_24dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/common_ic_outlined_close_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_2_5dp"
            android:text="@string/common_text_close"
            android:textColor="@color/common_color_white"
            android:textSize="@dimen/common_text_size_sp_13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_maximize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_10dp"
        android:paddingTop="@dimen/common_5_5dp"
        android:paddingEnd="@dimen/common_10dp"
        android:paddingBottom="@dimen/common_4_5dp">

        <ImageView
            android:id="@+id/iv_maximize"
            android:layout_width="@dimen/common_24dp"
            android:layout_height="@dimen/common_24dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/mission_ic_maximize" />

        <TextView
            android:id="@+id/tv_maximize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_2_5dp"
            android:text="@string/common_text_maximize"
            android:textColor="@color/common_color_white"
            android:textSize="@dimen/common_text_size_sp_13" />
    </LinearLayout>
</LinearLayout>
