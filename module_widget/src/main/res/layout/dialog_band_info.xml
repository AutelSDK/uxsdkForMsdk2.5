<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/common_320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/common_shape_rect_solid_color_ff_radius_14"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40dp"
            android:layout_marginHorizontal="@dimen/common_20dp"
            android:layout_marginTop="@dimen/common_20dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="频段详情"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_sp_17"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tv_close"
                android:layout_width="@dimen/common_20dp"
                android:layout_height="@dimen/common_20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_close" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_country_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_20dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:text="国家码：XX"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_sp_14" />

        <TextView
            android:id="@+id/tv_band_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_20dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:text="合规频段：XX"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_sp_14" />

        <com.autel.common.widget.CommonItemSwitch
            android:id="@+id/civ_switch"
            android:layout_marginTop="@dimen/common_10dp"
            android:layout_marginBottom="@dimen/common_10dp"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/common_10dp"
            android:layout_marginEnd="@dimen/common_10dp"
            android:layout_height="@dimen/common_55dp"
            android:background="@drawable/common_item_bg_all"
            app:title_name="是否支持设置国家码" />

        <EditText
            android:id="@+id/et_input_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_20dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:background="@drawable/common_shape_btn_bg_blue"
            android:hint="请输入国家码"
            android:padding="@dimen/common_8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_sp_14" />

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1dp"
            android:layout_marginTop="@dimen/common_20dp"
            android:background="@color/common_color_cd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_msg" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40dp"
            android:layout_marginHorizontal="@dimen/common_20dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/common_color_007aff"
            android:textSize="@dimen/common_text_size_sp_17" />

    </LinearLayout>

</FrameLayout>